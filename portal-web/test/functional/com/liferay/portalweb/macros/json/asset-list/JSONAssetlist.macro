definition {

	@summary = "Add an Asset List."
	macro addAssetList {
		Variables.assertDefined(parameterList = "${groupName},${selectionType},${title}");

		var groupId = JSONAssetlistSetter.setGroupId(groupName = "${groupName}");

		var type = JSONAssetlistSetter.setType(selectionType = "${selectionType}");

		JSONAssetlistAPI._addAssetListEntry(
			groupId = "${groupId}",
			title = "${title}",
			type = "${type}");
	}

}
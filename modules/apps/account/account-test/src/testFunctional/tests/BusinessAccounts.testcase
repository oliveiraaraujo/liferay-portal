@component-name = "portal-user-management-and-portal-configuration"
definition {

	property portal.release = "true";
	property portal.upstream = "true";
	property testray.main.component.name = "Business Accounts";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
		else {
			Accounts.tearDownCP();
		}
	}

	@priority = "4"
	test AddAccountUser {
		property portal.upstream = "quarantine";

		ProductMenu.gotoPortlet(
			category = "Accounts",
			panel = "Control Panel",
			portlet = "Accounts");

		Accounts.addCP(
			accountDescription = "This is an Account with User.",
			accountName = "Account with User");

		ProductMenu.gotoPortlet(
			category = "Accounts",
			panel = "Control Panel",
			portlet = "Account Users");

		AccountUsers.addUsers(
			accountName = "Account with User",
			userEmailAddress = "userea@liferay.com",
			userFirstName = "userfn",
			userLastName = "userln",
			userScreenName = "usersn");

		ProductMenu.gotoPortlet(
			category = "Accounts",
			panel = "Control Panel",
			portlet = "Account Users");

		LexiconEntry.viewEntryName(rowEntry = "userfn userln");
	}

